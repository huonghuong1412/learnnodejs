<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-12">
            <h3 class="create-title">
                Edit Course
            </h3>
        </div>
        <div class="col-12">
            <form method="POST" action="/courses/{{course._id}}?_method=PUT">
                <div class="form-group">
                    <label for="input-name">Tên khoá học</label>
                    <input type="text" name="name" class="form-control" id="input-name" aria-describedby="emailHelp"
                        placeholder="Name" value="{{course.name}}">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Mô tả</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description"
                        placeholder="Description">{{course.description}}</textarea>
                </div>
                <div class="form-group">
                    <label for="input-video">Video ID</label>
                    <input type="text" name="videoId" class="form-control" id="input-video" placeholder="VideoId"
                        value="{{course.videoId}}">
                </div>
                <div class="form-group">
                    <label for="input-level">Trình độ</label>
                    <input type="text" name="level" class="form-control" id="input-level" placeholder="Level"
                        value="{{course.level}}">
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>